.che-list-item
  display inline-block
  width 100%

.che-list-item:hover
  background-color $hover-on-list-color

.che-list-item
  border-bottom 1px solid $list-separator-color

.che-list-item-content
  overflow hidden
  width 100%

  & > *
    line-height 40px

.che-list-item-content *:not(.tooltip)
  overflow inherit
  text-overflow ellipsis
  white-space normal

  *.tooltip
   overflow visible
