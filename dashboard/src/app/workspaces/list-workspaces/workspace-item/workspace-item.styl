.workspace-item-row
  min-height 40px

.workspace-item-row *
  outline none

.workspace-item-details
  line-height 22px
  font-size 12px
  cursor pointer

  & .che-xs-header
    display inline-block
    float left
    text-transform uppercase
    vertical-align middle
    color $primary-color
    min-width 65px

.workspace-item-name
  color $label-primary-color

  & > *
   display inline-block
   line-height 22px
   font-size 12px
   float left

  .spinner > *
    float left

.workspace-actions
  margin-right 10px
  display inline-block
  vertical-align middle
  color $list-action-color

  *
    text-decoration none
    color inherit

  & > *:hover
    color $list-action-hover-color

  & > *:not(.tooltip)
    display inline-block
    float left
    height 16px
    margin-right 10px

  .tooltip
    color $white-color

  *:before
    font-size 16px

  .fa-plus-square-o:before
    position relative
    yop .5px

.workspace-item-temp
  color $label-info-color

.workspace-resources-locked
  background-color $error-color
  color $white-color
  padding 5px 10px
  border-radius 5px

.workspace-consumed-value
  line-height initial
  font-size 12px
  font-weight bold
  color $list-blue-color

.workspace-list-item-arrow md-icon
  height 32px !important
  line-height 35px
  width 36px !important
  font-size 32px !important

.workspace-list-item-arrow button
  font-size 11px !important

.workspace-list-item-checkbox
  .che-list-item-checkbox-main md-checkbox.che-list-item-checkbox
    display inline-block
  .che-list-item-checkbox-main md-icon
    display none

.workspace-list-item-checkbox > *
  width 100px
