.workspaces-list-header
  flex-wrap wrap

.workspace-list-content
  margin-top 50px
  padding 15px 0 15px 0

.workspace-list-content .workspace-empty-list
  overflow visible
  min-height calc(100vh - 246px)

.workspace-list-title md-icon
  font-size 24px
  height auto
  width auto
  color $label-info-color
  line-height 24px

md-progress-linear.workspaces-list-progress
  height 10px

.workspace-list-title
  margin-left 5px

.workspace-list-empty
  font-size 12px

.workspace-resources-locked
  background-color red

.che-list che-workspace-item:not(:last-of-type) .che-list-item
  border-bottom 1px solid $list-separator-color

.header-column
  margin-left 12px
  line-height 50px
  text-transform uppercase
  color $frame-subscription-color

.sort-direction
  position relative
  text-align center
  display inline
  top 4px

.sort-direction *:first-child
  position relative
  top 3px

.sort-direction *::before
  font-size 20px
  color $menu-bg-color
